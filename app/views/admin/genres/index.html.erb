<h3>カテゴリ一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <%= f.label :"ジャンル名" %>
  <%= f.text_field :name,include_blank: "ジャンル名は必須です。" required: :true %>
  <%= f.submit "新規登録" %>
<% end %>

<% @genres.each do |genre| %>
  <%= genre.name %>
  <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
<% end %>