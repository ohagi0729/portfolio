<h3 class="page_title">プロフィールを編集する（管理）</h3>
<div class="contents_padding">
  <!--フラッシュメッセージ-->
  <%= render '/public/homes/message' %>

  <!--編集フォーム-->
  <div class="prf_form_wrap">
    <%= form_with model: @customer, url: admin_customer_path(@customer), local: true, method: :patch do |f| %>

    <div class="prf_form_flex">
      <p >プロフィール画像</p>
      <div>
        <%= f.file_field :profile_image, class: "prf_form_control_img", accept: 'image/*' %>
      </div>
    </div>

    <div class="prf_form_flex">
      <p >ユーザーネーム</p>
      <div>
        <%= f.text_field :name, autofocus: true, class: "prf_form_control" %>
      </div>
    </div>

    <div class="prf_form_flex_int">
      <p >自己紹介</p>
      <div class="form-group">
        <%= f.text_area :introduction, class: "prf_form_control_int" %>
      </div>
    </div>

    <div class="prf_form_flex_sta">
      <p>会員ステータス</p>
      <div>
        <%= f.label :is_active_true, for: "is_active_true", class: "prf_form_control_act" do %>
          <%= f.radio_button :is_active, true, id: "is_active_true" %> 有効
        <% end %>
        <span class="prf_form_control_spa"></span>
        <%= f.label :is_active_false, for: "is_active_false", class: "prf_form_control_act" do %>
          <%= f.radio_button :is_active, false, id: "is_active_false" %> 退会
        <% end %>
      </div>
    </div>

    <!--更新、キャンセルボタン-->
    <div class="prf_form_flex_btn">
      <%= link_to  'キャンセル',admin_customer_path(@customer), class: 'btn_g' %>
      <%= f.submit '更新する', class: 'btn_y' %>
    </div>
    <% end %>
  </div>
</div>