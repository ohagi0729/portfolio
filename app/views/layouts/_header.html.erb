<header class="bg-white">
  <div class="container">
    <div class="row">

      <div class="col-md-2">
        <h1 class="mb-0"><a class="navbar-brand text-dark" href="/">ネコログ</a></h1>
      </div>

      <div class="col-md-10">
        <div class="row">
        <div class="col-md-12 d-flex justify-content-end">
            <nav class="navbar navbar-expand-lg navbar-dark p-0">
              <ul class="nav_color navbar-nav">
              <% if customer_signed_in? %>

                <!--顧客ログイン時 -->
                <li><%= render "layouts/serach" %></li>
                <li><%= link_to "投稿一覧", public_posts_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ネコトモ一覧", public_customers_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %></li>
                <li><%= link_to "マイページ", public_customer_path(current_customer), class: 'nav-link text-dark' %></li>

              <% elsif admin_signed_in? %>

                <!-- 管理者ログイン時 -->
                <li><%= render "layouts/serach" %></li>
                <li><%= link_to "投稿一覧", public_posts_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ネコトモ一覧", admin_customers_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "カテゴリ一覧", admin_genres_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, url: admin_session_path, class: 'nav-link text-dark' %></li>

              <% else %>

                <!-- ログアウト時 -->
                <li><%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %></li>
                <li><%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %></li>
              <% end %>
            </ul>
          </nav>
        </div>

        </div>
      </div>

    </div>
  </div>
</header>