<h3 class="page_title">画像を投稿する</h3>

<% if @post.errors.any? %>
<div class="post_form_error">
  <%= @post.errors.count %>件のエラーが発生したニャΣ(ФωФ=ﾉ)ﾉ

  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="post_form_wrap">
  <%= form_for [:public, @post], local: true do |f| %>
  <div class="post_form_flex">
    <p>投稿画像</p>
    <%= f.file_field :image, accept: "image/*", class: "post_form_control_img" %><br>
  </div>
  <div class="post_form_flex_cap">
    <p>投稿文</p>
    <%= f.text_area :caption, rows:"3", placeholder:"ここに投稿文を記載する", class: "post_form_control_cap"  %>
  </div>
  <div class="post_form_flex_btn">
    <%= link_to "キャンセル", public_posts_path, class: "btn_g" %>
    <%= f.submit '投稿する' , class: "btn_y" %>
  </div>
  <% end %>
</div>