<div>
  <%= image_tag @post.get_image %>
  <p>説明：<%= @post.caption %></p>
  <%= link_to public_customer_path(current_customer) do %>
    <%= image_tag current_customer.get_profile_image, size: '50x50' %>
  <% end %>
  <p>ユーザーネーム：<%= @post.customer.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>

<div id="favorite_btn_<%= @post.id %>">
  <%= render '/public/favorites/favorite', post: @post %>
</div>

<div id="comment_counter">
 <%= render "/public/post_comments/counter", post: @post %>
</div>

<div id="comment_index">
 <%= render "/public/post_comments/index", post: @post %>
</div>

<%= render "/public/post_comments/form", post: @post, book_comment: @post_comment %>