<h3 class="page_title">プロフィールを編集する</h3>
<%= form_with model: @customer, url: public_customer_path(@customer), local: true, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control name" %>
  </div>
 <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>