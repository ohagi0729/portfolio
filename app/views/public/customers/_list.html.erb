<% customers.each do |customer| %>
  <%= link_to public_customer_path(current_customer) do %>
    <%= image_tag current_customer.get_profile_image, size: '50x50' %>
  <% end %>
  <%= customer.name %>
  <%= customer.introduction %>


  <% if current_customer != customer %>
    <% if current_customer.following?(user) %>
      <%= link_to "フォロー外す", public_customer_relationships_path(customer.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", public_customer_relationships_path(customer.id), method: :post %>
    <% end %>
  <% end %>

  <%#= link_to 'Show', customer %>
<% end %>