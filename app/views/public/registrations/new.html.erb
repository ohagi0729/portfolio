<h3 class="page_title">新規登録</h3>
<div class="form_wrap">
  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', local: true do |f| %>
    <div>
    <%= render "devise/shared/error_messages", resource: resource %>
    </div>

  <div class="form_flex">
    <p >名　前</p>
    <div>
    <%= f.text_field :name, autofocus: true, class:"form-control" %>
    </div>
  </div>

  <div class="form_flex">
    <p>メールアドレス</p>
    <div>
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
  </div>

  <div class="form_flex">
    <p>パスワード</p>
    <div>
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
  </div>

  <div class="form_flex">
    <p>パスワード<br>(確認用)</p>
    <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
    </div>
  </div>

  <div class="form_flex">
    <%= link_to 'キャンセル', root_path, class:"btn_g" %>
    <%= f.submit "新規登録する",class: "btn_y" %>
  </div>
  <% end %>
</div>